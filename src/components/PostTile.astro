---
export interface Props {
  url: string;
  title: string;
  description: string;
  date: string;
  updatedDate: string;
}

const { url, title, description, date, updatedDate } = Astro.props;

const shortDescription = `${description.substring(0, 60)} ...`;
---

<div class="mb-2">
  <div class="pb-2 mb-2">
    <div class="mb-2">
      <a
        href={url}
        class="hover:text-green-700 dark:text-white dark:hover:text-green-700 font-bold"
      >
        {title}
      </a>
    </div>

    <div class="font-light mb-1">
      {shortDescription}
    </div>

    <div class="text-right italic text-sm">
      <span class="hover:text-green-700">
        {date}
      </span>
    </div>

    <div class="text-red-900 text-right italic text-xs">
      <span class="hover:text-green-800">
        {updatedDate}
      </span>
    </div>
  </div>

  <div class="h-px border-gray-500 border-b w-full">&nbsp;</div>
</div>
