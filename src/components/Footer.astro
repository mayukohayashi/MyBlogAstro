---
import { Icon } from "astro-icon";

const currentYear = new Date().getFullYear();
---

<footer>
  <script
    type="text/partytown"
    src="https://www.googletagmanager.com/gtag/js?id=G-G2VS231L74"
  ></script>

  <script type="text/partytown">
    window.dataLayer = window.dataLayer || [];
    function gtag() {
      dataLayer.push(arguments);
    }
    gtag("js", new Date());
    gtag("config", "G-G2VS231L74");
  </script>
  <div class="mb-3 mt-4">
    <div class="flex flex-row">
      <div class="basis-3/4 text-left">
        <div class="flex flex-row mb-2">
          <a
            class="mr-2 hover:text-green-700 dark:text-white dark:hover:text-green-700"
            href="/blog">Blog</a
          >
          <a
            class="mr-2 hover:text-green-700 dark:text-white dark:hover:text-green-700"
            href="/about">About</a
          >
        </div>
        <div class="text-sm">
          &copy; {currentYear} hayashi.
        </div>
      </div>
      <div class="basis-1/4 justify-end flex flex-row">
        <a
          href="/rss.xml"
          class="ml-4 hover:text-green-700 dark:text-white dark:hover:text-green-700"
          aria-label="rss"
          rel="noopener"
        >
          <Icon name="fa:feed" />
        </a>
        <a
          href="mailto:mayuko.hayashi.spf.rd@gmail.com"
          class="ml-4 hover:text-green-700 dark:text-white dark:hover:text-green-700"
          aria-label="Email"
          rel="noopener"
        >
          <Icon name="fa-solid:envelope" />
        </a>
        <a
          href="https://github.com/mayukohayashi"
          class="ml-4 hover:text-green-700 dark:text-white dark:hover:text-green-700"
          aria-label="Github"
          rel="noopener"
        >
          <Icon name="fa-brands:github" />
        </a>
      </div>
    </div>
  </div>

  <style>
    [astro-icon] {
      height: 24px;
    }
  </style>
</footer>
